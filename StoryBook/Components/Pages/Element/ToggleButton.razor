@rendermode InteractiveServer

<Button class="@Class" Color="@buttonColor" @onclick="OnButtonClick">@Text</Button>

@code {
    [Parameter]
    public string Class { get; set; } = "";
    [Parameter]
    public string Text { get; set; } = "";

    private EToggleState buttonState = EToggleState.Normal;
    private Color buttonColor = Color.Light;

    public bool IsSelected
    {
        get { return (buttonState == EToggleState.Selected); }
    }

    protected override void OnInitialized()
    {
    }

    private void OnButtonClick()
    {
        SwitchState();
    }

    private void SwitchState()
    {
        switch (buttonState)
        {
            case EToggleState.Normal:
                buttonState = EToggleState.Selected;
                buttonColor = Color.Active;
                break;

            case EToggleState.Selected:
                buttonState = EToggleState.Normal;
                buttonColor = Color.Light;
                break;
        }
    }
}